      <div class="validation-error" id="dataError">Please provide at least one detail about the person in previous steps</div>

      <button class="btn btn-primary" onclick="nextStep()">Next ‚Üí</button>
      <button class="btn btn-secondary" onclick="prevStep()">‚Üê Back</button>
    </div>

    <!-- Step 9: Pricing -->
    <div class="step" data-step="9">
      <h2>Choose your report level</h2>
      <p>Select the depth of information you need</p>
      
      <div class="tiers">
        <div class="tier" data-tier="basic" data-price="4.99" onclick="selectTier(this)">
          <div class="tier-header">
