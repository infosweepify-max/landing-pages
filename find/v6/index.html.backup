<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Sweepify ‚Äî Comprehensive Background Check</title>
  <meta name="description" content="Professional background verification and people search. Get comprehensive reports in hours." />
  
  <style>
    :root{
      --bg:#0f172a;
      --card:#1e293b;
      --muted:#94a3b8;
      --text:#f1f5f9;
      --accent:#3b82f6;
      --accent2:#8b5cf6;
      --ok:#10b981;
      --border:#334155;
      --shadow:0 10px 40px rgba(0,0,0,.4);
    }
    *{box-sizing:border-box;margin:0;padding:0}
    body{
      color:var(--text);
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      background:
        radial-gradient(1200px 600px at 20% 0%, rgba(59,130,246,.08) 0%, transparent 60%),
        radial-gradient(1000px 500px at 80% 100%, rgba(139,92,246,.06) 0%, transparent 60%),
        var(--bg);
      min-height:100vh;display:flex;align-items:center;justify-content:center;
      padding:20px;
    }
    
    .quiz-container{
      max-width:720px;width:100%;
      background:var(--card);border-radius:24px;
      border:1px solid var(--border);box-shadow:var(--shadow);
      padding:50px 40px;text-align:center;position:relative;
    }
    @media(max-width:640px){.quiz-container{padding:36px 24px}}

    .logo{
      width:52px;height:52px;margin:0 auto 20px;
      background:linear-gradient(135deg,var(--accent),var(--accent2));
      border-radius:14px;display:flex;align-items:center;justify-content:center;
      font-weight:900;font-size:26px;color:#fff;
      box-shadow:0 8px 24px rgba(59,130,246,.35);
    }

    .progress-bar{
      height:6px;background:var(--border);border-radius:12px;
      margin-bottom:28px;overflow:hidden;
    }
    .progress-fill{
      height:100%;background:linear-gradient(90deg,var(--accent),var(--accent2));
      width:0%;transition:width .5s ease;border-radius:12px;
    }
    .step-count{font-size:13px;color:var(--muted);margin-bottom:18px;font-weight:600;letter-spacing:.3px}

    .step{display:none;animation:fadeIn .4s}
    .step.active{display:block}
    @keyframes fadeIn{from{opacity:0;transform:translateY(15px)}to{opacity:1;transform:translateY(0)}}
    
    .step h2{font-size:28px;margin-bottom:12px;line-height:1.2;font-weight:800}
    @media(max-width:640px){.step h2{font-size:24px}}
    .step p{color:var(--muted);font-size:15px;margin-bottom:28px;line-height:1.6}

    input,select,textarea{
      width:100%;padding:15px 17px;border-radius:12px;
      border:1px solid var(--border);background:var(--bg);
      color:var(--text);font-size:15px;transition:all .2s;outline:none;
      font-family:inherit;
    }
    input:focus,select:focus,textarea:focus{
      border-color:var(--accent);
      box-shadow:0 0 0 3px rgba(59,130,246,.15);
      background:var(--card);
    }
    input::placeholder,textarea::placeholder{color:var(--muted);opacity:.6}

    .input-group{display:grid;gap:12px;margin-bottom:20px}
    .input-row{display:grid;grid-template-columns:1fr 1fr;gap:12px}
    @media(max-width:640px){.input-row{grid-template-columns:1fr}}

    .social-fields{display:grid;gap:10px;margin-bottom:20px}
    .social-input{
      display:flex;align-items:center;gap:12px;
      background:var(--bg);border:1px solid var(--border);border-radius:12px;
      padding:4px 4px 4px 14px;transition:all .2s;
    }
    .social-input:focus-within{border-color:var(--accent);box-shadow:0 0 0 3px rgba(59,130,246,.15)}
    .social-icon{
      width:36px;height:36px;border-radius:8px;
      display:flex;align-items:center;justify-content:center;
      font-size:18px;flex-shrink:0;
    }
    .social-icon.instagram{background:linear-gradient(45deg,#f09433,#e6683c,#dc2743,#cc2366,#bc1888)}
    .social-icon.facebook{background:#1877f2}
    .social-icon.twitter{background:#1da1f2}
    .social-icon.linkedin{background:#0a66c2}
    .social-icon.tiktok{background:linear-gradient(45deg,#ff0050,#00f2ea)}
    .social-input input{border:none;background:transparent;padding:11px 12px}

    .option-cards{display:grid;gap:14px;margin:20px 0}
    .option-card{
      padding:18px 20px;border-radius:14px;border:2px solid var(--border);
      background:var(--bg);cursor:pointer;transition:all .3s;
      display:flex;align-items:center;gap:16px;text-align:left;
    }
    .option-card:hover{border-color:var(--accent);transform:translateY(-2px)}
    .option-card.selected{
      border-color:var(--accent);background:rgba(59,130,246,.08);
      box-shadow:0 6px 20px rgba(59,130,246,.2);
    }
    .option-icon{
      width:48px;height:48px;border-radius:12px;
      background:linear-gradient(135deg,var(--accent),var(--accent2));
      display:flex;align-items:center;justify-content:center;
      font-size:22px;flex-shrink:0;
    }
    .option-content h3{font-size:17px;margin-bottom:4px}
    .option-content p{font-size:13px;color:var(--muted);margin:0}

    .btn{
      padding:15px 32px;border-radius:12px;font-size:15px;font-weight:700;
      border:none;cursor:pointer;transition:all .3s;
    }
    .btn-primary{
      background:linear-gradient(135deg,var(--accent),var(--accent2));
      color:#fff;box-shadow:0 6px 20px rgba(59,130,246,.35);
      width:100%;margin-top:22px;
    }
    .btn-primary:hover:not(:disabled){
      transform:translateY(-2px);
      box-shadow:0 10px 30px rgba(59,130,246,.45);
    }
    .btn-primary:disabled{opacity:.5;cursor:not-allowed}
    
    .btn-secondary{
      background:transparent;color:var(--muted);
      border:1px solid var(--border);padding:12px 24px;font-size:14px;
      margin-top:12px;
    }
    .btn-secondary:hover{background:var(--bg);color:var(--text)}

    .tiers{display:grid;gap:14px;margin-top:26px}
    .tier{
      padding:20px;border-radius:16px;border:2px solid var(--border);
      background:var(--bg);cursor:pointer;transition:all .3s;
      text-align:left;position:relative;
    }
    .tier:hover{
      border-color:var(--accent);transform:translateY(-3px);
      box-shadow:0 10px 25px rgba(59,130,246,.2);
    }
    .tier.selected{
      border-color:var(--accent);background:rgba(59,130,246,.06);
      box-shadow:0 8px 20px rgba(59,130,246,.25);
    }
    .tier .badge{
      position:absolute;top:-9px;right:14px;padding:4px 12px;
      background:linear-gradient(135deg,var(--accent),var(--accent2));
      border-radius:12px;font-size:10px;font-weight:900;color:#fff;
      text-transform:uppercase;letter-spacing:.5px;
    }
    .tier .tier-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:12px}
    .tier .tier-name{font-weight:800;font-size:17px}
    .tier .price{font-size:32px;font-weight:900;letter-spacing:-1px}
    .tier ul{list-style:none;font-size:13px;color:var(--muted);margin-top:8px}
    .tier ul li{padding:5px 0;display:flex;gap:8px;align-items:flex-start}
    .tier ul li::before{content:'‚úì';color:var(--ok);font-weight:900;flex-shrink:0;font-size:15px}

    .loading-screen{display:none;padding:40px 0}
    .loading-screen.active{display:block}
    .spinner-big{
      width:60px;height:60px;border:4px solid var(--border);
      border-top-color:var(--accent);border-radius:50%;
      animation:spin 1s linear infinite;margin:0 auto 24px;
    }
    @keyframes spin{to{transform:rotate(360deg)}}
    .loading-text{font-size:18px;font-weight:700;margin-bottom:10px}
    .loading-subtext{color:var(--muted);font-size:14px}

    .validation-error{
      color:#ef4444;font-size:13px;margin-top:8px;
      display:none;
    }
    .validation-error.show{display:block}

    .pac-container{
      background:var(--card);
      border:1px solid var(--border);
      border-radius:12px;
      margin-top:4px;
      box-shadow:var(--shadow);
    }
    .pac-item{
      border-top:1px solid var(--border);
      padding:8px 12px;
      color:var(--text);
      cursor:pointer;
    }
    .pac-item:hover{background:var(--bg)}
    .pac-item-query{color:var(--text)}
    .pac-matched{color:var(--accent);font-weight:600}
  </style>
</head>
<body>
  <div class="quiz-container">
    <div class="logo">S</div>
    
    <div class="step-count">Step <span id="currentStep">1</span> of <span id="totalSteps">9</span></div>
    <div class="progress-bar">
      <div class="progress-fill" id="progressFill"></div>
