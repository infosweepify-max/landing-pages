          <div class="social-icon tiktok">üéµ</div>
          <input type="text" id="social_tiktok" placeholder="TikTok username" />
        </div>
      </div>

      <button class="btn btn-primary" onclick="nextStep()">Next ‚Üí</button>
      <button class="btn btn-secondary" onclick="prevStep()">‚Üê Back</button>
    </div>

    <!-- Step 5: Their Email -->
    <div class="step" data-step="5">
      <h2>Email address</h2>
      <p>Know any email they use? (Optional)</p>
      
      <input type="email" id="email_cheater" placeholder="their@email.com (optional)" />

      <button class="btn btn-primary" onclick="nextStep()">Next ‚Üí</button>
      <button class="btn btn-secondary" onclick="prevStep()">‚Üê Back</button>
